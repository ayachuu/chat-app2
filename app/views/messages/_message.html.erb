  <diV class="messages">
    <div class="chat-message">
      <div class="chat-user">
        <%= message.user.name %>
      </diV>
      <div class="chat-time">
        <%= l message.created_at %>
      </diV>
    </diV>
    <div class="lower-message">
      <diV class="message">
        <%= message.content %>
      </diV>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    </diV>
 </diV>